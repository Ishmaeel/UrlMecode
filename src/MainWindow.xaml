<Window x:Class="UrlMecode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrlMecode"
        mc:Ignorable="d"
        Title="The Sevalator"
        Width="1200"
        SizeToContent="Height"
        Height="Auto"
        WindowStyle="ToolWindow">
    <StackPanel>
        <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" />
        <TextBox Text="{Binding EncodedOutput}"
                 IsReadOnly="True"
                 Background="AliceBlue"
                 Margin="5" />
        <TextBox Text="{Binding DecodedOutput}"
                 IsReadOnly="True"
                 Background="AliceBlue"
                 Margin="5" />
    </StackPanel>
</Window>
