<Window x:Class="UrlMecode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrlMecode"
        mc:Ignorable="d"
        Title="UrlMecode"
        Width="1200"
        SizeToContent="Height"
        Height="Auto" Icon="/Expand.ico">
    <StackPanel>
        <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" />
        <TextBox Text="{Binding Encoded, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" IsReadOnly="True" />
        <TextBox Text="{Binding Decoded, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5" IsReadOnly="True" />
    </StackPanel>
</Window>
